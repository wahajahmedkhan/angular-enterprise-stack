{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "plugins": [
    "prettier-plugin-organize-imports"
  ],
  "proseWrap": "always",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "trailingComma": "all"
}
